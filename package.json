{
  "name": "voice-chat-bot",
  "version": "1.0.0",
  "description": "Premium Discord Voice Automation Bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy-commands": "tsx src/deploy-commands.ts",
    "migrate": "tsx src/db/migrate.ts",
    "lint": "eslint src",
    "format": "prettier --write src",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "discord.js": "^14.16.0",
    "dotenv": "^16.4.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.0",
    "eslint": "^9.15.0",
    "typescript-eslint": "^8.15.0",
    "prettier": "^3.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
